<configuration>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://centos3:9000/hbase</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>centos3,centos4,centos5,centos11,centos12,centos13</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.dataDir</name>
    <value>/home/zc/software/zoodir/data</value>
  </property>
  <property>
    <name>hbase.master</name>
    <value>centos3:60000</value>
  </property>
  <property>
    <name>hbase.master.info.port</name>
    <value>10010</value>
  </property>
  <property>
   <name>hbase.mapreduce.bulkload.max.hfiles.perRegion.perFamily</name>
   <value>1048576</value>
  </property>
  <property> 
   <name>hbase.balancer.period</name> 
   <value>60000</value> 
  </property>
</configuration>

